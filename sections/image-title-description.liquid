<!-- image-title-description.liquid -->
<div class="image-title-description-section">
  {% for block in section.blocks %}
    <div class="row {% cycle 'left-row', 'right-row' %}">
      <div class="image-column">
        <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.title }}">
      </div>
      <div class="text-column">
        <h2>{{ block.settings.title }}</h2>
        <p>{{ block.settings.description }}</p>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Image Title Description",
  "settings": [],
  "blocks": [
    {
      "type": "image_title_desc1",
      "name": "Row 1",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "image_title_desc2",
      "name": "Row 2",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ]
}
{% endschema %}
<style>
  .image-title-description-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1200px; /* Adjust as needed */
    margin: auto;
  }

  .row {
    display: flex;
  }

  .left-row .image-column {
    order: 1;
    width:50%;
  }

  .left-row .text-column {
    order: 2;
    width:50%;
  }

  .right-row .image-column {
    order: 2;
    width:50%;
  }

  .right-row .text-column {
    order: 1;
    width:50%;
  }

.image-column img {
    max-width: 100%;
    height: 500px;
    width: 100%;
}

  .text-column {
    flex: 1;
    padding: 0 20px;
  }

  @media (max-width: 768px) {
    .row {
      flex-direction: column;
    }

    .text-column {
      padding: 20px 0;
    }
  }
</style>
